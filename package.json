{
  "name": "ai-catalog",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*",
    "scripts"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "tsc -b",
    "db:generate": "cd packages/db && prisma generate",
    "db:migrate": "cd packages/db && prisma migrate dev",
    "db:deploy": "cd packages/db && prisma migrate deploy",
    "seed": "tsx scripts/seed.ts",
    "start": "pnpm -C apps/web start"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  }
}
